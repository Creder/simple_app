

<div class="center jumbotron">
<%= cloudinary_js_config %>

  <% if logged_in? %>
  <%= Cloudinary::Uploader.upload('/home/creder/Downloads/586698-random-picture.jpg') %>
      <%= javascript_include_tag "canvas" %>
      <div id="canvas-container">
  			<canvas id="c" width="800" height="800" style="border: 1px solid black;"></canvas>
	  </div> 
	  <div class = "controls">
  		<table>
  		    <tr>
  		        <td><label><span>Angle:</span> <input id="angle-control" value="0" min="-180" max="180" type="range"></label></td>
  		        <td><label><span>Scale:</span> <input id="scale-control" value="1" min="0.1" max="3" step="0.1" type="range"></label></td>
  		        <td><input type="button" id="bring-to-front" name="to front"></td>
  			    <td><input type="button" id="bring-forward" name="forward"></td>
  			    <td><input type="button" id="send-to-back" name="to back"></td>
  			    <td><input type="button" id="send-backwards" name="backwards"></td>
  			</tr>
  	    </table>
	  </div>
    </div>
  <% else %>
    <h1>Sample App</h1>
    <h2>
      This is the home page for the sample application.
  	</h2>
     <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  <% end %>
</div>




